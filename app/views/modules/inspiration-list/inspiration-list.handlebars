<div class="inspiration-list">
  <div class="row">
    <div class="columns large-5">
      <div class="inspiration-list__filter filter-aside">
        <div class="filter-header">
          <p>Filter</p>
        </div>
        <ul>
          <li class="platforms opened">
            <span>Kanalen</span>
            <form class="hide">
              <div class="option">
                <input type="checkbox" id="allekanalen" value="allekanalen" checked>
                <label for="allekanalen">Alle kanalen</label>
              </div>
              <div class="option">
                <input type="checkbox" id="twitter" value="twitter">
                <label for="twitter">Twitter</label>
              </div>
              <div class="option">
                <input type="checkbox" id="instagram" value="instagram">
                <label for="instagram">Instagram</label>
              </div>
            </form>
          </li>
        </ul>
      </div>
    </div>
    <div class="columns large-19 end">
      <div class="inspiration-list__title">
        <h3>U zocht naar </h3>
      </div>
      <div class="inspiration-list__message list-message hide"></div>
      <div class="inspiration-list__list">
        <!-- Generated content from Javascript -->
      </div>
    </div>
  </div>
</div>
